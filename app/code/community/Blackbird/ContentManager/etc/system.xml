<config>
   <tabs>
        <blackbird translate="label">
            <label><![CDATA[<span class="blackbird-menu-admin">Blackbird Extensions</span>]]></label>
            <sort_order>200</sort_order>
        </blackbird>
    </tabs>
    <sections>
        <blackbird_contentmanager translate="label" module="contentmanager">
            <class>separator-top</class>
            <label>Content Manager</label>
            <tab>blackbird</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <frontend translate="label">
                    <label>Frontend</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <flat_contentmanager_content translate="label comment">
                            <label>Use Flat Content</label>
                            <comment><![CDATA[Enable for reindexing a big number of contents]]>.</comment>
                            <frontend_type>select</frontend_type>
                            <frontend_model>adminhtml/system_config_form_field_select_flatproduct</frontend_model>
                            <backend_model>catalog/system_config_backend_catalog_product_flat</backend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </flat_contentmanager_content>
                    </fields>
                </frontend>
            </groups>
        </blackbird_contentmanager>
    </sections>
</config>
