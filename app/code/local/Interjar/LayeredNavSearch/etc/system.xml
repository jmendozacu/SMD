<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <tabs>
        <interjar translate="label" module="layerednavsearch">
            <label>Interjar</label>
            <sort_order>500</sort_order>
        </interjar>
    </tabs>
    <sections>
        <layerednavsearch translate="label" module="layerednavsearch">
            <label>Layered Navigation Search</label>
            <sort_order>10</sort_order>
            <tab>interjar</tab>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>10</sort_order>
                    <expanded>1</expanded>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Search In Layered Navigation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Has a further enabler on Category level</comment>
                        </enabled>
                        <searchable_attributes translate="label">
                            <label>Searchable Attributes</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>layerednavsearch/system_config_source_searchable_attributes</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Note: A large amount of attributes could cause a slowdown on the return from the search query</comment>
                        </searchable_attributes>
                    </fields>
                </general>
            </groups>
        </layerednavsearch>
    </sections>
</config>