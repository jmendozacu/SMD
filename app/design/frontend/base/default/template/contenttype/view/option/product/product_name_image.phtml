<?php
    $_identifier = $this->getIdentifier();
    $_content = $this->getContent();
    
    $_productCollection = $this->getProductCollection(array('name', 'small_image'));
    $_helper = $this->helper('catalog/output');
?>
<?php if($_productCollection->getSize()): ?>
<ul class="ct-product-list" id="ct-product-list-<?php echo $this->getIdentifier(); ?>">
    <?php foreach($_productCollection as $_product): ?>
        <li class="item">
            <?php // Product Image ?>
            <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(135); ?>" width="135" height="135" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" /></a>
            <?php $_productNameStripped = $this->stripTags($_product->getName(), null, true); ?>
            <p class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $_productNameStripped; ?>"><?php echo $_helper->productAttribute($_product, $_product->getName() , 'name'); ?></a></p>
        </li>
    <?php endforeach; ?>
</ul>
<script type="text/javascript">
    decorateList($('ct-product-list-<?php echo $this->getIdentifier(); ?>'));
</script>
<?php endif; ?>
