<?php
    $_identifier = $this->getIdentifier();
    $_content = $this->getContent();
    
    $_contentCollection = $this->getContentCollection(array('title', 'url_key'));
?>
<?php if($_contentCollection->getSize()): ?>
<ul class="ct-content-list" id="ct-content-list-<?php echo $this->getIdentifier(); ?>">
    <?php foreach($_contentCollection as $_content): ?>
        <li class="item">
            <?php $_contentNameStripped = $this->stripTags($_content->getTitle(), null, true); ?>
            <p class="content-title"><?php echo $_contentNameStripped; ?></p>
        </li>
    <?php endforeach; ?>
</ul>
<script type="text/javascript">
    decorateList($('ct-content-list-<?php echo $this->getIdentifier(); ?>'));
</script>
<?php endif; ?>
