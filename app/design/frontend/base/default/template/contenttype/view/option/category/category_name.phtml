    $_identifier = $this->getIdentifier();
    $_content = $this->getContent();
    
    $_categoryCollection = $this->getCategoryCollection(array('name'));
?>
<?php if($_categoryCollection->getSize()): ?>
<ul class="ct-category-list" id="ct-category-list-<?php echo $this->getIdentifier(); ?>">
