        <li class="item">
            <?php $_categoryNameStripped = $this->stripTags($_category->getName(), null, true); ?>
            <p class="category-name"><a href="<?php echo $_category->getUrl() ?>" title="<?php echo $_categoryNameStripped; ?>"><?php echo $_category->getName(); ?></a></p>
        </li>
    <?php endforeach; ?>
</ul>
<script type="text/javascript">
    decorateList($('ct-category-list-<?php echo $this->getIdentifier(); ?>'));
</script>
<?php endif; ?>
